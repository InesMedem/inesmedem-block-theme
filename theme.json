{
  "version": 2,
  "settings": {
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "units": ["px", "em", "rem", "%"]
    },
    
    "layout": {
      "contentSize": "1300px",
      "wideSize": "1200px"
    },
    "blocks": {
      "core/query-pagination": {},
      "core/pagination": {}
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        { "name": "Yellow", "slug": "yellow", "color": "#fca12f" },
        { "name": "Charcoal", "slug": "charcoal", "color": "#363636" },
        { "name": "Notion", "slug": "notion", "color": "#fafafa" },
        { "name": "Notion Dark", "slug": "notion-dark", "color": "#f2f2f0" },
        { "name": "White", "slug": "white", "color": "#ffffff" }
      ]
    },
    "typography": {
      "customFontSize": true,
      "fontFamilies": [
        {
          "fontFamily": "PPTelegraf, Arial, sans-serif",
          "name": "PPTelegraf",
          "slug": "PPTelegraf"
        },
        {
          "fontFamily": "'Times New Roman', serif",
          "name": "Times New Roman",
          "slug": "times-new-roman"
        }
      ],
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "clamp(1rem, 3vw, 1.5rem)" },
        { "name": "Normal", "slug": "normal", "size": "clamp(1.5rem, 4vw, 2.375rem)" },
        { "name": "Large", "slug": "large", "size": "clamp(2rem, 5vw, 3.875rem)"  },
        { "name": "Huge", "slug": "huge", "size": "clamp(2.5rem, 6vw, 6.25rem)" }
      ]
    }
  },
  "styles": {
    "elements": {
      "button": {
        "spacing": {
          "padding": {
            "top": "12px",
            "bottom": "12px",
            "left": "20px",
            "right": "20px"
          }
        },
        "typography": {
          "fontFamily": "PPTelegraf, Arial, sans-serif",
          "textTransform": "uppercase",
          "fontWeight": "500"
        },
        "color": {
          "text": "#ffffff",
          "background": "#fca12f"
        },
        "border": {
          "radius": "40px",
          "width": "0"
        }
      },
      "h1": {
      "typography": {
        "fontSize": "36px",
        "fontFamily": "PPTelegraf, Arial, sans-serif",
        "fontWeight": "500",
        "lineHeight": "1.2"
        }
      },
      "h2": {
      "typography": {
        "fontSize": "30px",
        "fontFamily": "PPTelegraf, Arial, sans-serif",
        "fontWeight": "500",
        "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "24px",
          "fontFamily": "PPTelegraf, Arial, sans-serif",
          "fontWeight": "500",
          "lineHeight": "1.4"
        }
      }
    }
  },
  
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
